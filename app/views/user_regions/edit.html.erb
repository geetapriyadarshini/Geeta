<body bgcolor="#9999FF">
<h1>Editing</h1>
<%= form_for :user_region, url: user_regions_path(@u_region), method: :patch do |form| %>
 


 
  <p>
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.order(:email),:id,:email, include_blank: true %>
</p>


<p>
     <%= form.label :region_id %>
       <%= form.collection_select :region_id, Region.order(:region_name),:id,:region_name, include_blank: true %>
  </p>
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', user_regions_path %>
</body>
