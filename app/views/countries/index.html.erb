<%= link_to 'new fr', new_country_path %>

<h1>Listing country</h1>
<table>
  <tr>
    <th>country Name</th>
    <th colspan="3">Show and Edit</th>
  </tr>
 
  <% @countries.each do |country| %>
    <tr>
      <td><%= country.country_name %></td>
      <td><%= link_to 'Show', country_path(country) %></td>
      <td><%= link_to 'Edit', edit_country_path(country) %></td>
      <td><%= link_to 'Delete', country_path(country),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
</body>
